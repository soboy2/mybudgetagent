{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "10mb",
        "includeFiles": ["templates/**", "static/**"],
        "excludeFiles": [
          "**/*.pyc", 
          "**/__pycache__/**", 
          "**/.git/**", 
          "**/.venv/**", 
          "**/env/**", 
          "**/.pytest_cache/**",
          "**/node_modules/**",
          "**/*.md",
          "**/*.log",
          "**/*.backup"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
} 